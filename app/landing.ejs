<div id="landingContainer" style="display: none;" class="flex flex-col h-screen">
    <header class="glass-effect px-4 bg-gray-800 flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <div>
                <h1 class="text-white text-xl font-bold"><%- lang('app.title') %></h1>
            </div>
        </div>
        
        <!-- User Profile -->
        <div class="flex items-center space-x-4">
            <div class="flex items-center space-x-3 glass-effect rounded-full px-4 py-2 hover-glow">
                <div class="w-10 h-10 rounded-full flex items-center justify-center" id="avatarContainer"></div>
                <span class="text-white font-medium" id="user_text"><%- lang('landing.usernameEditButton') %></span>
            </div>
            
            <!-- Settings Icon -->
            <div class="relative group">
                <button class="glass-effect p-3 rounded-xl hover-glow transition-all duration-300 group-hover:rotate-90" id="settingsbtn">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </button>
                <div class="absolute top-full right-0 mt-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none group-hover:pointer-events-auto">
                    <div class="glass-effect rounded-lg p-2 text-white text-sm whitespace-nowrap">
                        <%- lang('landing.settingsTooltip') %>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex-1 flex flex-col p-4">
        <div id="newsContent" article="-1">
            <div id="newsStatusContainer">
                <div id="newsStatusContent">
                    <div id="newsArticleFeedServerIcon" style="display: flex; justify-content: flex-end; align-items: flex-end;"></div>
                    <br>
                    <div id="newsTitleContainer">
                        <a id="newsArticleTitle">N/A</a>
                    </div>
                    <div id="newsMetaContainer">
                        <div id="newsArticleDateWrapper">
                            <span id="newsArticleDate">N/A</span>
                        </div>
                        <div id="newsArticleAuthorWrapper">
                            <span id="newsArticleAuthor">N/A</span>
                        </div>
                    </div>
                </div>
                <div id="newsNavigationContainer">
                    <button id="newsNavigateLeft">
                        <svg id="newsNavigationLeftSVG" viewBox="0 0 24.87 13.97">
                            <defs>
                                <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:2px;transition: 0.25s ease;}</style>
                            </defs>
                            <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
                        </svg>
                    </button>
                    <span id="newsNavigationStatus"><%- lang('landing.newsNavigationStatus', { currentPage: 1, totalPages: 1 }) %></span>
                    <button id="newsNavigateRight">
                        <svg id="newsNavigationRightSVG" viewBox="0 0 24.87 13.97">
                            <defs>
                                <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:2px;transition: 0.25s ease;}</style>
                            </defs>
                            <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
                        </svg>
                    </button>
                </div>
            </div>
            <div id="newsArticleContainer">
                <div id="newsArticleContent">
                    <div id="newsArticleContentScrollable">
                        <!-- Article Content -->
                    </div>
                </div>
            </div>
        </div>
        <div id="newsErrorContainer">
            <div id="newsErrorLoading">
                <span id="nELoadSpan" class="newsErrorContent"><%- lang('landing.newsErrorLoadSpan') %></span>
            </div>
            <div id="newsErrorFailed" style="display: none;">
                <span id="nEFailedSpan" class="newsErrorContent"><%- lang('landing.newsErrorFailedSpan') %></span>
                <button id="newsErrorRetry"><%- lang('landing.newsErrorRetryButton') %></button>
            </div>
            <div id="newsErrorNone" style="display: none;">
                <span id="nENoneSpan" class="newsErrorContent"><%- lang('landing.newsErrorNoneSpan') %></span>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <footer class="glass-effect p-4">
        <div class="flex items-center justify-between">
            <!-- Left Side - Server Status -->
            <div class="flex items-center space-x-6">
                <div class="flex items-center space-x-3">
                    <div class="w-3 h-3 bg-green-400 rounded-full"></div>
                    <span class="text-white font-medium" id="landingPlayerLabel"><%- lang('landing.serverStatus') %></span>
                </div>
                
                <div class="flex items-center space-x-3">
                    <span class="text-white font-medium" id="player_count"><%- lang('landing.serverStatusPlaceholder') %></span>
                </div>
                
            </div>
            
            <!-- Center - Launch Progress (when active) -->
            <div id="launch_details" class="flex-1 space-x-3 hidden">
                <div class="space-y-1">
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="progress-bar h-2 rounded-full" id="launch_progress" style="width: 0%"></div>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-white font-medium" id="launch_details_text"><%- lang('landing.launchDetails') %></span>
                        <span class="text-white text-sm" id="launch_progress_label">0%</span>
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Launch Controls -->
            <div class="flex items-center space-x-3" id="launch_content">
                <button class="glass-effect text-white font-medium px-4 py-2 rounded-lg hover-glow transition-all duration-300" id="server_selection_button">
                    <%- lang('landing.launchButton') %>
                </button>
                
                <button id="launch_button" class="bg-gradient-to-r from-green-400 to-green-600 text-white font-bold px-8 py-3 rounded-xl hover:from-green-500 hover:to-green-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
                    <div class="flex items-center space-x-2">
                        <span>Play</span>
                    </div>
                </button>
            </div>
        </div>
    </footer>
    <script src="./assets/js/scripts/landing.js"></script>
</div>